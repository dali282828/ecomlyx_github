    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.6.7",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "framer-motion": "^11.18.2",
