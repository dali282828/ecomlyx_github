{
  "name": "business-website-builder",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "docker:build": "docker build -t business-website-builder .",
    "docker:run": "docker run -p 3000:3000 business-website-builder",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "trivy fs .",
    "backup:db": "tsx scripts/backup-database.ts",
    "restore:db": "tsx scripts/restore-database.ts",
    "deploy:staging": "npm run build && npm run db:migrate && npm run test:ci",
    "deploy:prod": "npm run security:audit && npm run deploy:staging",
    "monitor:health": "tsx scripts/health-monitor.ts",
    "clean": "rimraf .next node_modules/.cache",
    "dev:docker": "docker compose -f docker-compose.dev.yml up --build",
    "test:docker": "docker compose exec app npm run test"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
